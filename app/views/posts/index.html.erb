<h1> All blogs </h1>

<%= link_to 'New Post', new_post_path %>

<table> 
  <thead>
    <tr>
      <th> Title </th>
      <th> Content </th>
     
      <th colspan='3'> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= post.title %> </td>
        <td> <%= post.content %> </td>
        
        <td> <%= link_to 'Show', post %> </td>
        <td> <%= link_to 'Edit', edit_post_path(post) %> </td>
        <td> <%= link_to "Delete", post, data: { turbo_confirm: "Are you sure?", turbo_method: :delete} %> </td>
      </tr>
    <% end %>
  </tbody>
